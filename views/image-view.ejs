<%- include('header') %>

  <div class="col-span-5 lg:col-span-4 rounded-xl overflow-y-scroll p-2 sm:p-4 lg:p-5 xl:p-9"
    style="background: #dfdff773;">
    <div>
      <div class="grid grid-cols-1 sm:grid-cols-4  mb-5 lg:mb-10 px-2 mt-3">
        <div class="text-center sm:text-left col-span-3 my-auto mb-3 sm:mb-0">
          <h2 class="text-2xl font-medium lg:text-3xl lg:font-semibold">Images</h2>
        </div>
        <div class="text-center sm:text-right my-auto">
          <a href="/admin/book-site-visit"><button class="addbtnstyle">Back</button></a>
        </div>
      </div>
      <div class="w-full flex gap-3 flex-wrap">
        <% data.forEach((data)=>{ %>
          <div class="group relative rounded-lg overflow-hidden bg-white  hover:shadow-2xl p-3 "
            style="margin-bottom: 20px;">
            <div class="h-40" style="height: 100px; width: 100px;">
              <a href="<%- data.image %>" download> <img src="<%- data.image %>" alt="City" class="h-40 w-full object-cover object-center " height="40%"
                width="40%"></a>
            </div>
            
          </div>
          <% }) %>
      </div>

    </div>
  </div>

  
  <%- include('footer') %>